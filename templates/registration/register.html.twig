		{% endblock %}
		<style>
			body {
				display: flex;
				flex-direction: column;
				align-items: center;
			}

			.logo {
				display: flex;
				align-items: center;
			}

			.logo img {
				width: 50px;
				margin-right: 20px;
			}

			.logo a {
				color: #9a000a; /* Changer la couleur du texte ici */
				font-size: 36px;
				font-weight: bold;
				text-decoration: none;
			}

			.custom-logo {
				max-width: 500%;
			}
			/* Centrer l'image horizontalement */
			img {
				display: block;
				margin: 0 auto;
				width: 80%;
			}
		</style>

	</head>
	{% block body %}

		<img src="{{asset('Front/img/elbaldi.jpg')}}" alt="Logo" style="display: block; margin: auto; margin-top: 50px; width: 200px;">
		<br><br>
		<div class="col-lg-4" style="margin-bottom: 100px">
			<h1>S'inscrire</h1>
			<br>
			{{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}}) }}
			{{ form_widget(registrationForm.roles,{ 'attr': {'class': 'form-control' } }) }}

			{{form_label(registrationForm.nom,'Nom : ',{'attr':{'class':'form-label'}})}}
			{{form_widget(registrationForm.nom,{'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.nom,{'attr':{'class':'form-control'}}) }}

			{{form_label(registrationForm.prenom,'Prénom : ',{'attr':{'class':'form-label'}})}}
			{{form_widget(registrationForm.prenom,{'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.prenom,{'attr':{'class':'form-control'}}) }}

			{{ form_row(registrationForm.image,{ 'attr': {'class': 'form-control' } }) }}

			{{form_label(registrationForm.numtel,'Numéro : ',{'attr':{'class':'form-label'}})}}
			{{form_widget(registrationForm.numtel,{'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.numtel,{'attr':{'class':'form-control'}}) }}

			{{form_label(registrationForm.ville,'Ville : ',{'attr':{'class':'form-label'}})}}
			{{form_widget(registrationForm.ville,{'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.ville,{'attr':{'class':'form-control'}}) }}

			{{form_label(registrationForm.email,'Email : ',{'attr':{'class':'form-label'}})}}
			{{form_widget(registrationForm.email,{'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.email,{'attr':{'class':'form-control'}}) }}

			{{ form_row(registrationForm.plainPassword,{ 'attr': {'class': 'form-control' } }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="btn btn-success custom-btn">Register</button>
			<a style="color: #9a000a" href="{{ path('app_login') }}">
				Se connecter
			</a>
			{{ form_end(registrationForm) }}
		</div>

	{% endblock %}
</html>
