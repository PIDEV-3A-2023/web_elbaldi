{% extends 'baseBack.html.twig' %}


{% block title %}
	 Commande
{% endblock %}
{% block body %}
	<h1>Commande</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>IdCmd</th>
				<td>{{ commande.idCmd }}</td>
			</tr>
			<tr>
				<th>Etat</th>
				<td>{{ commande.etat }}</td>
			</tr>
			<tr>
				<th>Date Commande</th>
				<td>{{ commande.dateCmd ? commande.dateCmd|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Total</th>
				<td>{{ commande.total }}</td>
			</tr>
			<tr>
				<th>Nom et Prenom</th>
				<td>{{ commande.idPanier.idUser.nom ~ ' ' ~ commande.idPanier.idUser.prenom }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ commande.adresse }}</td>
			</tr>
			<tr>
				<th>Numero telephone</th>
				<td>{{ commande.idPanier.idUser.numtel }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ commande.idPanier.idUser.email }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_commande_index') }}">retour</a>

	<a href="{{ path('app_commande_edit', {'idCmd': commande.idCmd}) }}">Modifier</a>

	{{ include('commande/_delete_form.html.twig') }}
{% endblock %}
