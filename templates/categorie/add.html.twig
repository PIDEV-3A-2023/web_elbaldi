{{ form_start(form) }}
<div class="form-group row">
    <label for="{{ form.nom_categorie.vars.id }}" class="col-sm-2 col-form-label">{{ form.nom_categorie.vars.label }}</label>
    <div class="col-sm-8">
        {{ form_widget(form.nom_categorie, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group row">
    <label for="{{ form.description.vars.id }}" class="col-sm-2 col-form-label">{{ form.description.vars.label }}</label>
    <div class="col-sm-8">
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group row text-center">
    <div class="col-sm-2"></div>
    <div class="col-sm-10 buttons-group">
        <button class="btn btn-success custom-btn d-inline-block">{{ button_label|default('Ajouter') }}</button>
        <a href="{{ path('app_categorie_index') }}" class="btn btn-success custom-btn d-inline-block ml-2">Retour</a>
    </div>
</div>
{{ form_end(form) }}