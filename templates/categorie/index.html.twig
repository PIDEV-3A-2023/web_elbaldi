{% extends 'baseBack.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <div class="container">

        <div class="row">
            <div class="col-12 mb-4 d-flex align-items-center">
                <i class="bi bi-file-plus" style="font-size: 30px; margin-right: 5px; "></i>
                <a href="{{ path('app_categorie_new') }}" class="btn btn-success custom-btn float-right">Ajouter catégorie</a>
            </div>
            {% for categorie in categories %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 card-large chosen-categorie-card">

                        <div class="text-center">
                            <img src="{{ asset('/Back/img/cate.png') }}" class="card-img-top img-fluid mx-auto" style="margin-top: 15px; width: 80%;">

                        </div>

                        <div class="card-body">
                            <h5 class="card-title">
                                Nom :
                                {{ categorie.nomCategorie }}</h5>
                            <p class="card-title">Description :
                                {{ categorie.description }}</p>

                            <div class="d-flex justify-content-between">
                                <div class="col-12 mb-4 d-flex align-items-center">
                                    <i class="bi bi-pencil-square" style="font-size: 25px; margin-right: 9px;"></i>
                                    <a href="{{ path('app_categorie_edit', {'id_categorie': categorie.id_categorie}) }}" class="btn btn-success custom-btn">Modifier</a>
                                    <i class="bi bi-trash" style="font-size: 25px; margin-right: 7px;"></i>

                                    <a href="{{ path('app_categorie_delete', {'id_categorie': categorie.id_categorie}) }}" class="btn btn-success custom-btn d-inline-block" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette categorie ?')" id="delete-categorie">
                                        Supprimer</a>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        Aucune catégorie n'a été trouvée.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}