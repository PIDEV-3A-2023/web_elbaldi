{% extends 'baseBack.html.twig' %}
<!DOCTYPE html>

<title>Commentaire index</title>

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_commentaire</th>
                <th>Contenu</th>
                <th>Date_comm</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.idCommentaire }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.dateComm ? commentaire.dateComm|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id_commentaire': commentaire.id_commentaire}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'id_commentaire': commentaire.id_commentaire}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Create new</a>
{% endblock %}
