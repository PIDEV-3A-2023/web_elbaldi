
{% extends 'baseBack.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Liste des produits</h1>

         <div class="row">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 card-large rounded">

                    <div class="text-center">
                        {% if produit.image is not null %}
                            <img src="{{ asset('images/' ~ produit.image) }}" class="card-img-top img-fluid mx-auto" style="margin-top: 20px; width: 40%;">
                        {% else %}
                            <img src="{{ asset('images/placeholder.png') }}" class="card-img-top img-fluid mx-auto" style="margin-top: 20px; width: 40%;">
                        {% endif %}
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">{{ produit.libelle }}</h5>
                        <p class="card-text">{{ produit.ref_produit }}</p>
                        <p class="card-text">{{ produit.description }}</p>
                        <p class="card-text">Prix de vente: {{ produit.prixVente }}</p>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_produit_edit', {'ref_produit': produit.ref_produit}) }}" class="btn btn-primary">Modifier</a>
 <a href="{{ path('app_produit_delete', {'ref_produit': produit.ref_produit}) }}" class="btn btn-success custom-btn" id="delete-produit">
                                        Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12 mb-4">
                <p>Aucun produit trouv√©.</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_produit_new') }}" class="btn btn-primary">Ajouter un produit</a>
</div>
{% endblock %}
