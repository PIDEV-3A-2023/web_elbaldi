{% extends 'baseFront.html.twig' %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('front/css/style.css') }}">
	<div class="container">

		<div class="row">

			{% for quiz in quizzes %}
				<div class="col-md-4 mb-4">
					<div class="card h-100 card-large chosen-Quiz-card">

						<div class="text-center">
							<img src="{{ asset('/Front/img/quizfront.png') }}" class="card-img-top img-fluid mx-auto" style="margin-top: 15px; width: 50%;">

						</div>

						<div class="card-body d-flex flex-column justify-content-center align-items-center">
							<h4 class="card-title  mb-3">

								<b>Nom :</b>

								{{ quiz.nom }}
							</h4>
							<h4 class="card-title">
								<b>Difficulté :</b>
								{{ quiz.difficulte }}
							</h4>
							<div class="col-md-4 d-flex align-items-center justify-content-center">
								{% if  utilisateur.nombrejouer < 3 %}
									<a href="{{ path('app_quiz_jouer', {'idQuiz': quiz.idQuiz}) }}" class="btn btn-success custom-btn" onclick="return confirm('Êtes-vous sûr de vouloir jouer ? Il vous reste encore {{2- utilisateur.nombrejouer }} fois pour jouer au quiz !')">Jouer</a>
								{% else %}
									<button type="button" class="btn btn-success custom-btn" disabled>Jouer</button>
								{% endif %}

							</div>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>

{% endblock %}
