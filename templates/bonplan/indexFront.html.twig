{% extends 'baseFront.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
   <link rel="stylesheet" href="{{ asset('css/cards.css') }}">

   
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Liste des bons plans</h1>
       
        <hr>
<div class="nk-widget">
                                    <div class="nk-widget-content">
                                        <form action="#" class="nk-form nk-form-style-1" novalidate="novalidate">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Chercher..." id="search" >
                                                <button class="nk-btn nk-btn-color-main-1"><span class="ion-search"></span><i class="bi bi-search"></i></button>
                                            </div>
                                        </form>
                                        <br>
                                        <br>
                                    </div>
                                </div>
        <div class="row card-deck">
            <div class="nk-blog-post nk-blog-post-border-bottom">
                                    <div class="row vertical-gap" id="all">
                                            {% include 'bonplan/ajax.html.twig' %}
                                    </div>
                                    <div class="row vertical-gap" id="search">
                                    </div>
                                </div>
        </div>
    </div>
    
    <style>
        .clamp {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2; /* number of lines to display */
            overflow: hidden;
            text-overflow: ellipsis; /* add ellipsis at the end of the text */
        }
    </style>



    <script
            src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')}}">
    </script>
    <script>
        $( document ).ready(function() {
            var currentRequest = null;
            $("#search").keyup(function(e){
                /* La variable value va prendre la valeur insérer dans le champ de texte
                afin d’effectuer la recherche */
                var value = $(this).val();
                if(currentRequest != null) {
                    currentRequest.abort();
                }
                /* Ajax est lancé lors du remplissage du champ texte dont l’id est
                « search » pour faire la recherche */
                currentRequest = $.ajax({
                    url : "{{ path('ajaxbonplan') }}",
                    type : 'GET',
                    data: {
                        'searchValue' : value
                    },
                    success : function(retour)
                    {
                        $('#all').html(retour);
                    },
                });
                return false;
            });
        });
    </script>
{% endblock %}
