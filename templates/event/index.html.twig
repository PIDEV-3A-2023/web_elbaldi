{% extends 'baseBack.html.twig' %}

{% block title %}Event index
{% endblock %}
{% block body %}

	<h1>Liste des évènements</h1>
	<a href="{{ path('app_event_new1') }}" class="btn btn-success custom-btn">Créer un nouvel évènement</a>
	<br><br>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Image</th>
				<th>Description</th>
				<th>Temps</th>
				<th>Organisation</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
				<tr>
					<td style="width:10px;">{{ event.idEvent }}</td>
					<td style="width:10px;">{{ event.titleEvent }}</td>
					<td style="width:10px;">
						<div class="crop"><img src="{{ asset('/uploads/'~ event.imageEvent) }}" alt=""/></div>
					</td>
					<td style="width:10x;">{{ event.descriptionEvent }}</td>
					<td style="width:10px;">{{ event.timeEvent ? event.timeEvent|date('Y-m-d H:i:s') : '' }}</td>
					<td style="width:10px;">{{ event.Organisation }}</td>
					<td>
						{{ include('event/_delete_form.html.twig') }}
						<a href="{{ path('app_event_edit', {'idEvent': event.idEvent}) }}">Modifier</a>
					</td>
				</tr>

			{% endfor %}
		</tbody>
	</table>


{% endblock %}
